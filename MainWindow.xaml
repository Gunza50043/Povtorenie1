<Window x:Class="Povtorenie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Povtorenie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF4A4A4A">
        <DataGrid x:Name="MainGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="233,10,10,28"/>
        <Button x:Name="b_DELETE" Content="DELETE" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Height="50" Width="218" Click="b_DELETE_Click"/>
        <Button x:Name="b_ADD" Content="ADD" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.303,-0.9" Height="51" Width="218" Click="b_ADD_Click"/>
        <Button x:Name="b_Update" Content="Update" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="54" Click="b_Update_Click" Width="218"/>
        <Button x:Name="b_CLEAR" Content="ClearGrid" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Height="59" Width="218" Click="b_CLEAR_Click"/>

    </Grid>
</Window>
